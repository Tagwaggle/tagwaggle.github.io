---
import DockIcon from './DockIcon.astro';

const dockApps = [
  { name: 'Finder', icon: '/icons/finder.svg', href: '/' },
  { name: 'Safari', icon: '/icons/safari.svg', href: '/about' },
  { name: 'Mail', icon: '/icons/mail.svg', href: '/contact' },
  { name: 'Photos', icon: '/icons/photos.svg', href: '/portfolio' },
  { name: 'Music', icon: '/icons/music.svg', href: '/music' },
  { name: 'Terminal', icon: '/icons/terminal.svg', href: '/terminal' },
  { name: 'Settings', icon: '/icons/settings.svg', href: '/settings' },
];
---

<div class="dock-content">
  {dockApps.map(app => (
    <DockIcon 
      name={app.name} 
      icon={app.icon} 
      href={app.href}
    />
  ))}
</div>

<style>
  .dock-content {
    display: flex;
    align-items: end;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    height: 100%;
  }
</style>
