---
export interface Props {
  name: string;
  icon: string;
  href: string;
}

const { name, icon, href } = Astro.props;
---

<a href={href} class="dock-icon" title={name}>
  <img src={icon} alt={name} class="dock-icon-image" />
  <div class="dock-icon-indicator"></div>
</a>

<style>
  .dock-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    transform-origin: bottom center;
    cursor: pointer;
  }
  
  .dock-icon-image {
    width: 56px;
    height: 56px;
    object-fit: contain;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  .dock-icon-indicator {
    width: 4px;
    height: 4px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    margin-top: 4px;
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  
  .dock-icon:hover .dock-icon-indicator {
    opacity: 1;
  }
  
  /* Reflection effect */
  .dock-icon::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) scaleY(-1);
    width: 56px;
    height: 28px;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 100%
    );
    border-radius: 0 0 12px 12px;
    opacity: 0.3;
    pointer-events: none;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  }
</style>
